<SimpleUIBuilder module="Taxonomy">
	<Elements>
		<Element field="text_name" title="Descriptive Name" type="TEXT" options="20" display="1" />
		<Element field="taxonomy_type" title="Type" type="SELECT" options="concept,qualifier,quantifier" display="1" />
		<Element field="code_set" title="Code Set" type="SELECT" options="UMLS,SNOMED-CT,LOINC" display="1" />
		<Element field="code_value" title="Code Value" type="TEXT" display="1" />
		<Element field="widget_type" title="Widget Type (Quantifier only)" type="SELECT" options="None|,Module|MODULE,Select Widget|SELECT,Text|TEXT,Checkbox|CHECKBOX" />
		<Element field="widget_options" title="Widget Options (Quantifier only)" type="TEXT" />
		<Element field="subs" title="Sub Members" type="MODULE_MULTIPLE" options="Taxonomy" />
	</Elements>
</SimpleUIBuilder>
