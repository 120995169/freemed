array page_history_list ( )
	description:
		Returns an array of the page session stack.
	global dependencies:
		$SESSION from session variable
	returns:
		array ( key = page name, value = URL )

array page_pop ( )
	description:
		Pops one page off of the session stack.
	global dependencies:
		$SESSION from session variable
	returns:
		array ( page, page name )

void page_push ( )
	description:
		Adds the current page to the session stack.
	global dependencies:
		$SESSION from session variable
		$page_title from page (not autogenerated)
	returns:
		NONE

array patient_history_list ( )
	description:
		Returns an array of the patient session stack.
	global dependencies:
		$SESSION from session variable
	returns:
		array ( key = patient info, value = patient id )

void patient_push ( int patient )
	description:
		Adds a patient to the session stack.
	global dependencies:
		$SESSION from session variable
	returns:
		NONE

void template_display ( [bool terminate_on_execute] )
	description:
		Displays the page template. This should be called
		after everything else on the page. It defaults to
		terminate page execution after the call.
	global dependencies:
		$template from lib/freemed.php
		$display_buffer from the rest of the package
	returns:
		NONE

----- SECURITY AND AUTHENTICATION -----------------------------------

bool freemed_check_access_for_facility ( int facility )
	description:
		Determines whether a user has access to a
		specific facility.
	global dependencies:
		$SESSION from session variable
	returns:
		true if the user has access, false if denied

bool freemed_check_access_for_patient ( int patient )
	description:
		Determines whether a user has access to a
		specific patient.
	global dependencies:
		$SESSION from session variable
	returns:
		true if the user has access, false if denied

void freemed_open_db ( )
	description:
		Authenticates with proper user information
		(actually just is a wrapper for freemed_verify_auth)
	global dependencies:
		$display_buffer from the rest of the package
	returns:
		NONE

